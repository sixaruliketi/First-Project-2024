<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <ImageView
        android:id="@+id/profileUserAvatarImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileGoBackBtn" />

    <ImageView
        android:id="@+id/profileGoBackBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_back"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileUsernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/profileUserAvatarImageView"
        app:layout_constraintStart_toStartOf="@+id/profileUserAvatarImageView"
        app:layout_constraintTop_toBottomOf="@+id/profileUserAvatarImageView" />

    <EditText
        android:id="@+id/profileUserAvatarET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="enter avatar link"
        app:layout_constraintTop_toBottomOf="@+id/profileUsernameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/profileUsernameET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="enter username"
        app:layout_constraintTop_toBottomOf="@id/profileUserAvatarET"
        app:layout_constraintStart_toStartOf="@id/profileUserAvatarET"
        app:layout_constraintEnd_toEndOf="@id/profileUserAvatarET"/>

    <Button
        android:id="@+id/profileEditInfoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit info"
        app:layout_constraintTop_toBottomOf="@id/profileUsernameET"
        app:layout_constraintEnd_toEndOf="@id/profileUsernameET"/>




</androidx.constraintlayout.widget.ConstraintLayout>