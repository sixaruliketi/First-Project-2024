<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/homeItemViewUserAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person"
        app:layout_constraintStart_toStartOf="@id/homeItemViewUserPost"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/homeItemViewUserPost"/>

    <ImageView
        android:id="@+id/homeItemViewUserPost"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/homeItemViewUserPostLocation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/homeItemViewUserID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user65489"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/homeItemViewUserAvatar"
        app:layout_constraintTop_toTopOf="@id/homeItemViewUserAvatar"/>

    <TextView
        android:id="@+id/homeItemViewUserPostLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tbilisi, Georgia"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/homeItemViewUserID"
        app:layout_constraintStart_toStartOf="@id/homeItemViewUserID"
        app:layout_constraintBottom_toTopOf="@id/homeItemViewUserPost"/>

</androidx.constraintlayout.widget.ConstraintLayout>